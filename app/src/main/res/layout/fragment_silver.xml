<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.bird.SilverFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="8dp"
            android:padding="16dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/centeredImageView"
                android:layout_width="284dp"
                android:layout_height="350dp"
                android:layout_gravity="center"
                android:padding="8dp"
                android:src="@drawable/bird2" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/title_silver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_silver"
            android:textSize="20sp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/description_silver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_silver"
            android:textSize="20sp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:textAlignment="center" />
    </LinearLayout>

</FrameLayout>